<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.OrientationBase" parent="Theme.OrientationCommon">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_900</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/gray_900</item>
        <item name="colorOnSurface">@color/gray_100</item>
        <item name="colorError">@color/red_a700</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_500</item>

        <item name="alertDialogTheme">@style/Theme.Orientation.Dialog</item>
    </style>

    <style name="Theme.Orientation" parent="Theme.OrientationBase">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Orientation.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.Orientation.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorSurface">@color/black</item>
    </style>

    <style name="Theme.Orientation.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSurface">@color/black</item>
        <item name="android:windowBackground">@color/gray_900</item>
    </style>
</resources>
