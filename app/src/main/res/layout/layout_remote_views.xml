<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_notification"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:ignore="Overdraw,UselessParent,ContentDescription,VectorDrawableCompat"
    >

    <FrameLayout
        android:id="@+id/remote_views_button1"
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:foreground="@drawable/fg_touch"
        >

        <ImageView
            android:id="@+id/remote_views_shape1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bg_circle"
            />

        <ImageView
            android:id="@+id/remote_views_icon1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription,VectorDrawableCompat"
            tools:src="@drawable/ic_unspecified"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/remote_views_button2"
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:foreground="@drawable/fg_touch"
        >

        <ImageView
            android:id="@+id/remote_views_shape2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bg_circle"
            />

        <ImageView
            android:id="@+id/remote_views_icon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription,VectorDrawableCompat"
            tools:src="@drawable/ic_portrait"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/remote_views_button3"
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:foreground="@drawable/fg_touch"
        >

        <ImageView
            android:id="@+id/remote_views_shape3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bg_circle"
            />

        <ImageView
            android:id="@+id/remote_views_icon3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription,VectorDrawableCompat"
            tools:src="@drawable/ic_landscape"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/remote_views_button4"
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:foreground="@drawable/fg_touch"
        >

        <ImageView
            android:id="@+id/remote_views_shape4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bg_circle"
            />

        <ImageView
            android:id="@+id/remote_views_icon4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription,VectorDrawableCompat"
            tools:src="@drawable/ic_reverse_portrait"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/remote_views_button5"
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:foreground="@drawable/fg_touch"
        >

        <ImageView
            android:id="@+id/remote_views_shape5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bg_circle"
            />

        <ImageView
            android:id="@+id/remote_views_icon5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription,VectorDrawableCompat"
            tools:src="@drawable/ic_reverse_landscape"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/remote_views_button6"
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:foreground="@drawable/fg_touch"
        >

        <ImageView
            android:id="@+id/remote_views_shape6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bg_circle"
            />

        <ImageView
            android:id="@+id/remote_views_icon6"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription,VectorDrawableCompat"
            tools:src="@drawable/ic_sensor_full"
            />
    </FrameLayout>
</LinearLayout>
