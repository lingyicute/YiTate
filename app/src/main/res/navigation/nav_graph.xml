<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment"
    >

    <fragment
        android:id="@+id/MainFragment"
        android:name="net.lyi.orientation.view.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main"
        >
        <action
            android:id="@+id/action_Main_to_DetailedSettings"
            app:destination="@id/DetailedSettingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_Main_to_EachApp"
            app:destination="@id/EachAppFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_Main_to_CustomWidgetList"
            app:destination="@id/CustomWidgetListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/DetailedSettingsFragment"
        android:name="net.lyi.orientation.view.DetailedSettingsFragment"
        android:label="@string/menu_title_detailed_settings"
        tools:layout="@layout/fragment_detailed_settings"
        />
    <fragment
        android:id="@+id/EachAppFragment"
        android:name="net.lyi.orientation.view.EachAppFragment"
        android:label="@string/menu_title_setting_for_each_app"
        tools:layout="@layout/fragment_each_app"
        />
    <fragment
        android:id="@+id/CustomWidgetListFragment"
        android:name="net.lyi.orientation.view.CustomWidgetListFragment"
        android:label="@string/menu_title_widget_list"
        tools:layout="@layout/fragment_custom_widget_list"
        >
        <action
            android:id="@+id/action_CustomWidgetList_to_CustomWidgetConfig"
            app:destination="@id/CustomWidgetConfigFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/CustomWidgetConfigFragment"
        android:name="net.lyi.orientation.view.CustomWidgetConfigFragment"
        android:label="@string/menu_title_widget_config"
        tools:layout="@layout/fragment_custom_widget_config"
        >
        <argument
            android:name="appWidgetId"
            android:defaultValue="-1"
            app:argType="integer"
            />
    </fragment>
</navigation>
